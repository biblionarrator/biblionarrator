<div class="results" data-href="{{url}}">
<span class="background"></span>
<h4 class="summary">
{{summary}}
</h4>
{{#if query.facets}}
<div class="row-fluid">
    <div class="span10 facets">
        <span class="facet-label">{{#trhtml 'label.limits'}}Limits{{/trhtml}}</span>
            {{#each query.facets}}
                &gt; <span class="selected-facet"><span class="facet-label">{{label}}</span><span class="facet-value">{{value}}</span> <sub><a title="{{#tr 'label.removefacet'}}Remove {{label}} facet{{/tr}}" class="remove-facet" data-index="{{@index}}" href="#">x</a></sub></span>
            {{/each}}
        </span>
    </div>
</div>
{{/if}}
{{#if sortings}}
<div class="row-fluid">
    <div class="span10 offset2">
        <span class="sort-label">{{#trhtml 'label.sort'}}Sort{{/trhtml}}</span> &gt;
        {{#with sortings}}
            {{#each used}}
                <span class="sort-facet">{{label}} <sub><a title="{{#tr 'label.removesort'}}Remove {{label}} sort{{/tr}}" class="remove-sort">x</a></sub></span> &gt;
            {{/each}}
            {{#if available}}
                <span data-toggle="dropdown-select" class="button-dropdown white">
                    <select id="add-sort">
                        <option data-placeholder="true">-- {{#trhtml 'label.addsort'}}add sort{{/trhtml}} --</option>
                        {{#each available}}
                            <option value="{{schema}}_{{field}}">{{label}}</option>
                        {{/each}}
                    </select>
                </span>
            {{/if}}
        {{/with}}
    </div>
</div>
{{/if}}
<div class="row-fluid">
    {{#if facet}}
        <div class="span2 sidebar">
            {{>facets}}
        </div>
    {{else}}
        <div class="span2 sidebar" data-template="facets" data-message="{{facetpub}}">
            {{#trhtml 'label.loadingfacets'}}Loading facets{{/trhtml}}
        </div>
    {{/if}}
    <div class="span10 main-content">
    <table id="recordList" class="table">
        <thead>
            <tr class="header-hidden"><th>Number</th><th>Record</th><th>Actions</th></tr>
        </thead>
        <tbody>
        {{> resultstable}}
        {{#if more}}
            <tr id="showmore">
                <td>&nbsp;</td>
                <td><a data-offset="20" href="{{url}}">{{#trhtml 'label.showmore'}}Show more{{/trhtml}}</a></td>
            </tr>
        {{/if}}
        </tbody>
    </table>
    </div>
</div>
</div>
