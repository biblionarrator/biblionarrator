.showtags span:before, .showtags a:before, .showtags span:after, .showtags a:after {
    font-size: smaller;
    color: #585;
    font-weight: bold;
}

{{#each fields}}
    .showtags .{{schema}}_{{name}}:before {
        content: "<{{label}}>";
    }

    .showtags .{{schema}}_{{name}}:after {
        content: "</{{label}}>";
    }

    .{{schema}}_{{name}} {
        {{#if link}}
            color: inherit;
        {{/if}}
        {{css}}
    }
{{/each}}
