{{#with record}}<article>
<header><span class="eric_term">{{Name}}</span>
{{#if Attributes.ScopeNote}}<span class="eric_scope">{{Attributes.ScopeNote}}</span>{{/if}}
</header>
{{#if Relationships.NT}}<section><em>Narrower terms:</em><ul>
{{#each Relationships.NT}}<li><span class="eric_narrower">{{this}}</span></li>{{/each}}
</ul></section>{{/if}}
{{#if Relationships.BT}}<section><em>Broader terms:</em><ul>
{{#each Relationships.BT}}<li><span class="eric_broader">{{this}}</span></li>{{/each}}
</ul></section>{{/if}}
{{#if Relationships.RT}}<section><em>Related terms:</em><ul>
{{#each Relationships.RT}}<li><span class="eric_related">{{this}}</span></li>{{/each}}
</ul></section>{{/if}}
{{#if Relationships.U}}<section><em>Instead of this term, use:</em>
{{#each Relationships.U}}<span class="eric_preferred">{{this}}</span>{{/each}}
</section>{{/if}}
{{#if Relationships.UF}}<section><em>Synonyms:</em><ul>
{{#each Relationships.UF}}<li><span class="eric_synonyms">{{this}}</span></li>{{/each}}
</ul></section>{{/if}}
</article>{{/with}}
