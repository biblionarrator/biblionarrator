{{#with record}}<article><header><span class="dc_title">{{metadata.dc_title}}</span> (<span class="eric_accno">{{metadata.dc_identifier.eric_accno}}'</span>)
{{#if metadata.dc_creator}}<div>
{{#each metadata.dc_creator.personal}}<span class="dc_creator">{{this}}</span>{{/each}}
{{#each metadata.dc_creator.institution}}<span class="dc_creator">{{this}}</span>{{/each}}
</div>{{/if}}
{{#if metadata.dc_source}}<div>
<span class="dc_source">{{metadata.dc_source}}</span>
{{#if metadata.eric_citation}}<span class="eric_citation">{{metadata.eric_citation}}</span>{{/if}}
</div>{{/if}}
{{#if metadata.dc_description}}<span class="dc_description">{{metadata.dc_description}}</span>{{/if}}
</header>
{{#if metadata.dc_publisher}}
<section><span class="dc_publisher">{{metadata.dc_publisher}}</span>.</section>
{{/if}}
{{#if metadata.dc_subject}}
<section><em>Subjects:</em><ul>
{{#each metadata.dc_subject}}
<li><span class="dc_subject">{{this}}</span></li>
{{/each}}
</ul></section>
{{/if}}
{{#if metadata.dc_type}}
<section><em>Publication type:</em><ul>
{{#each metadata.dc_type}}
<li><span class="dc_type">{{this}}</span></li>
{{/each}}
</ul></section>
{{/if}}
</article>{{/with}}
