{{#with record}}<article><header><span class="eric_title">{{metadata.dc_title}}</span> (<span class="eric_accno">{{metadata.dc_identifier.eric_accno}}</span>)
{{#if metadata.dc_creator}}<div>
{{#each metadata.dc_creator.personal}}{{#if @index}}; {{/if}}<a href="/search?anchor={{../id}}&amp;q=creator:%22{{this}}%22" class="eric_creator">{{this}}</a>{{/each}}{{#if metadata.dc_creator.personal}}{{#if metadata.dc_creator.institution}}; {{/if}}{{/if}}{{#each metadata.dc_creator.institution}}{{#if @index}}; {{/if}}<a href="/search?anchor={{../id}}&amp;q=creator:%22{{this}}%22" class="eric_creator">{{this}}</a>{{/each}}
</div>{{/if}}
{{#if metadata.dc_source}}<div>
<a href="/search?anchor={{id}}&amp;q=source_e:%22{{metadata.dc_source}}%22" class="eric_source">{{metadata.dc_source}}</a>
{{#if metadata.eric_citation}}<span class="eric_citation">{{metadata.eric_citation}}</span>{{/if}}
</div>{{/if}}
{{#if metadata.dc_description}}<span class="eric_description">{{metadata.dc_description}}</span>{{/if}}
</header>
{{#if metadata.dc_publisher}}
<section><span class="eric_publisher">{{metadata.dc_publisher}}</span>.</section>
{{/if}}
{{#if metadata.dc_subject}}
<section><em>Subjects:</em><ul>
{{#each metadata.dc_subject}}
<li><span class="eric_subject">{{this}}</span></li>
{{/each}}
</ul></section>
{{/if}}
{{#if metadata.dc_type}}
<section><em>Publication type:</em><ul>
{{#each metadata.dc_type}}
<li><span class="eric_type">{{this}}</span></li>
{{/each}}
</ul></section>
{{/if}}
</article>{{/with}}
